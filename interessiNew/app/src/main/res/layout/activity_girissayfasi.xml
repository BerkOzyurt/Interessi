<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="-2dp"
        android:layout_height="-2dp"
        android:id="@+id/mainface"
        android:src="@drawable/wall14"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SifreLabel"
        android:text="Şifre:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_alignBottom="@+id/SifreText"
        android:layout_alignStart="@+id/KullaniciAdiLabel"
        android:layout_alignEnd="@+id/KullaniciAdiLabel"
        android:layout_alignTop="@+id/SifreText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:hint=""
        android:textSize="20dp"
        android:ems="7"
        android:id="@+id/KullaniciAdiText"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:layout_above="@+id/SifreLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="49dp"
        android:background="@drawable/frame1"        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KullaniciAdiLabel"
        android:text="Mail:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/KullaniciAdiText"
        android:layout_alignBottom="@+id/KullaniciAdiText"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Giriş Yap"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/GirisButton"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        android:background="@drawable/button_design"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/SifreLabel"
        android:layout_centerHorizontal="true"
        android:onClick="OnLogin"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint=""
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        android:ems="7"
        android:layout_alignParentBottom="true"
        android:id="@+id/SifreText"
        android:layout_marginBottom="183dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/KullaniciAdiText"
        android:background="@drawable/frame1"/>

</RelativeLayout>